if __name__ == '__main__':
    print_hi('PyCharm')






sum = 0
cnt =0 
new_dic = dict()
print("Welcome th Grade tracer ")


while (True):
    subject =input("Enter the subject or done: ")
    if subject.lower() == 'done' :
        break
    if subject:
        cnt+=1
    grade = float(input("Enter the grade of the subject : "))
    new_dic [subject] = grade
    sum+=grade
print( new_dic)


average = sum/cnt
print('Average of the Grades is :',average)
